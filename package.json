    "antd": "^5.4.6",
    "cld": "^2.9.0",
    "easy-speech": "^2.0.0",
    "framer-motion": "^10.12.4",
    "franc-min": "^6.1.0",
    "language-monitor": "^1.0.3",
    "languagedetect": "^2.0.0",
    "plasmo": "0.69.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.8.0",
